FROM {{ cross_compiling }}python:{{ python_version }}-slim-buster as build_bin
WORKDIR /code
RUN mkdir /code/{{ app_name }}
# 复制源文件
COPY {{ app_name }} /code/{{ app_name }}/
RUN python -m zipapp -p "/usr/bin/env python3" {{ app_name }}

FROM {{ cross_compiling }}python:{{ python_version }}-slim-buster as build_img
COPY pip.conf /etc/pip.conf
RUN pip --no-cache-dir install --upgrade pip
RUN sed -i 's/deb.debian.org/mirrors.ustc.edu.cn/g' /etc/apt/sources.list
RUN apt update -y && apt install -y --no-install-recommends build-essential && rm -rf /var/lib/apt/lists/*
WORKDIR /code
COPY requirements.txt /code/requirements.txt
RUN python -m pip --no-cache-dir install -r requirements.txt
COPY --from=build_bin /code/{{ app_name }}.pyz /code
CMD ["python" ,"{{ app_name }}.pyz"]